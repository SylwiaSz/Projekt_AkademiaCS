<Window x:Class="WpfApplication1.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="PasswordWindow" Height="120" Width="300">
    <Grid>
        <Label x:Name="passwordLabel" Content="Please give password:" HorizontalAlignment="Center"
               VerticalAlignment="Top" />
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Center" Height="23" VerticalAlignment="Center"
                     Width="120" />
        <Button x:Name="okButton" Content="Done!" Margin="0,0,0,5" HorizontalAlignment="Center"
                VerticalAlignment="Bottom" Width="75" Click="okButton_Click" />

    </Grid>
</Window>